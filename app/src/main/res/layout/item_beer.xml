<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_beer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txt_beer_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:gravity="start|center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/txt_beer_style"
        app:layout_constraintEnd_toStartOf="@+id/img_beer_label"
        app:layout_constraintStart_toEndOf="@+id/btn_drink"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="Heineken Lager"/>

    <TextView
        android:id="@+id/txt_beer_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_drink"
        tools:text="American-Style permium lager"/>


    <ImageView
        android:id="@+id/img_beer_label"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_abv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_style"
        tools:text="ABV: 5%"/>

    <TextView
        android:id="@+id/txt_ibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_abv"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_style"
        tools:text="IBU: 18.5"/>

    <TextView
        android:id="@+id/txt_srm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_ibu"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_style"
        tools:text="SRM: 5"/>

    <ImageButton
        android:id="@+id/btn_drink"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        app:ico_color="@color/colorPrimary"
        app:ico_icon="typ_beer"
        app:ico_size="24dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:src="@drawable/fui_done_check_mark"/>


</android.support.constraint.ConstraintLayout>