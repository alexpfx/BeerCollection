<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_beer_name"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/txt_beer_style"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Heineken Lager"/>

    <TextView
        android:id="@+id/txt_beer_style"
        android:layout_width="247dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_name"
        tools:text="American-Style permium lager"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/txt_beer_style"
        app:layout_constraintStart_toEndOf="@+id/txt_beer_name"
        app:layout_constraintTop_toTopOf="@+id/txt_beer_name"
        app:srcCompat="?attr/actionModeCloseDrawable"/>

    <ImageView
        android:id="@+id/img_beer_label"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/txt_beer_name"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_abv"
        app:layout_constraintStart_toStartOf="@+id/txt_beer_description"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_style"
        />

    <TextView
        android:id="@+id/txt_abv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_style"
        tools:text="5%"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/label_ibu"
        app:layout_constraintStart_toEndOf="@+id/txt_abv"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_style"/>

    <TextView
        android:id="@+id/txt_ibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_style"
        tools:text="18.5"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/label_srm"
        app:layout_constraintStart_toEndOf="@+id/txt_ibu"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_style"/>

    <TextView
        android:id="@+id/txt_srm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_style"
        tools:text="5"/>

    <TextView
        android:id="@+id/txt_beer_description"
        android:layout_width="365dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:text="Heineken is brewed using the same method developed in 1873 and takes ..."/>

</android.support.constraint.ConstraintLayout>